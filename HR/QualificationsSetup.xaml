                            <Button Foreground="White" BorderBrush="{x:Null}" Background="#FF0072D1" x:Name="baddLan" Content="Add New +" HorizontalAlignment="Left" Margin="151,76,0,0" VerticalAlignment="Top" Width="104" Click="baddLan_Click"/>
