                            <DataGrid Background="#FF555A68" x:Name="gridCer" HorizontalAlignment="Left" Height="426" Margin="151,138,0,0" VerticalAlignment="Top" Width="842" AutoGenerateColumns="False" DataContext="{Binding}" CanUserAddRows="False">
